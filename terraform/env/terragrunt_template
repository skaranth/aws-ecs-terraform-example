remote_state {
	backend = "s3"

	config = {
  		encrypt        = true
  		bucket         = "tg-{{THE_BUCKET}}"
  		key            = "${path_relative_to_include()}/terraform.tfstate"
  		region         = "{{THE_REGION}}"
  		dynamodb_table = "tg-{{THE_LOCK_TABLE}}"
	}
}

terraform {
	extra_arguments "bucket" {
		commands = get_terraform_commands_that_need_vars()
		arguments = [
			"-var-file=./terraform.tfvars",
			"-var-file=../terraform.tfvars"
		]
	}
}

